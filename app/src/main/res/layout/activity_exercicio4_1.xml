<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Exercicio4_1">

    <Button
            android:text="CALCULAR"
            android:layout_width="306dp"
            android:layout_height="71dp"
            android:id="@+id/calcular" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textSize="24sp" android:textStyle="bold"
            android:onClick="calcularGasto"/>
    <TextView
            android:text="Modelo do Altomovél:"
            android:layout_width="188dp"
            android:layout_height="33dp"
            android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/modelo"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:lineSpacingExtra="10sp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:text="Distância(km):"
            android:layout_width="188dp"
            android:layout_height="23dp"
            android:id="@+id/textView" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/distancia" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:text="Potência do motor:"
            android:layout_width="188dp"
            android:layout_height="23dp"
            android:id="@+id/textView2" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/potencia" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:layout_width="249dp"
            android:layout_height="26dp"
            android:id="@+id/textView4" android:textSize="18sp"
            android:text="Valor do litro da gasolina:" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/valorGasolina" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textStyle="bold"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/valorGasolina"
            android:hint="Digite o valor da gasolina..." android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/calcular" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.504"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/potencia"
            android:hint="Digite a potência do motor..." android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/distancia"
            android:hint="Digite a distância..." android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/modelo"
            android:hint="Digite o modelo..."
            app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>