<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Exercicio4_2">

    <TextView
            android:layout_width="319dp"
            android:layout_height="265dp"
            android:id="@+id/tela" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.51"
            android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
    <Button
            android:text="Compartilhar"
            android:layout_width="297dp"
            android:layout_height="51dp"
            android:id="@+id/compartilhar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tela" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintVertical_bias="0.138" android:textStyle="bold" android:textSize="18sp"
            android:onClick="compartilhar"/>
</android.support.constraint.ConstraintLayout>